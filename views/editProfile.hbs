    <title>Edit Profile Page</title>
 

<body>
   <div class="container py-3">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <h3>Personal info:</h3>
            
         <form class="form-horizontal" role="form" action="/editDB" method="POST"> 
          <div class="form-group">
            <label class="col-lg-3 control-label " for="username">Username: </label>{{data.username}}
            
            <div class="col-lg-8">
              <input class="form-control d-none" type="text" id="username" name="username" placeholder="{{data.username}}">
                </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>{{data.email}}*:
            <div class="col-lg-8">
              <input class="form-control d-none" type="text" name="email" placeholder="{{data.email}}" disabled>
            </div>
          </div>
        <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>{{data.password}}
            <div class="col-md-8">
              <input class="form-control d-none" type="password" name="password" placeholder="{{data.password}}">
            </div>
          </div>
           {{!-- <div class="form-group">
            <label class="col-md-3 control-label" for="phone">Phone:</label>
            <p>{{data.phone}}</p>
            <div class="col-md-8">
              <input class="form-control d-none" type="text" id="phone" name="phone" value="{{data.phone}}">
            </div>
          </div> --}}
        
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
                
                 <button class="btn  d-none save" type="submit" style="background-color: #218599;color:white">Save Changes</button>        
             <input type="reset" class="btn  d-none cancel" style="background-color: #218599;color:white" value="Cancel"> 
            </div>
          </div>
        </form>
      </div>               
      <button class="btn  edit" type="button" value="click" style="background-color: #218599;color:white">Edit
        </button>
      </div>
  </div>
</div>
  
<hr>
</body>



































